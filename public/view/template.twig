<!DOCTYPE html>
<html lang="fr">

  <head>

    <link href="/OCP5/public/css/bootstrap.css" rel="stylesheet">
    <link href="/OCP5/public/css/design.css" rel="stylesheet">

    <script>
      tinymce.init({selector: '#mytextarea'});
    </script>

    <title>
      {% block title %}{% endblock %}
    </title>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/OCP5">OCP5</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="menu">
          <ul class="navbar-nav me-auto">
            {% if data_user is empty %}
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/login">Connexion</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/subscribe">S'inscrire</a>
              </li>
            {% else %}
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/settingaccount">Compte</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/listpost">Post</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/listpostuser">Vos poste(s)</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/deco">Deconnexion</a>
              </li>
            {% endif %}
            {% if data_user.UserType == 1 %}
              <li class="nav-item">
                <a class="nav-link" href="/OCP5/admin">Gestion Admin</a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>

    {% if session.flash.danger is defined %}
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h6 class="alert-link">{{ session.flash.danger }}</h6>
      </div>
    {% endif %}
    {% if session.flash.success is defined %}
      <div role="alert" class="alert alert-dismissible alert-success">
         <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h6 class="alert-link">{{ session.flash.success }}</h6>
      </div>
    {% endif %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>
  </body>

    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</html>
